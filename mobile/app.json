{
  "expo": {
    "name": "Yuvshiksha",
    "slug": "yuvshiksha",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "yuvshiksha",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yuvshiksha.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to upload profile pictures.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload profile pictures.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for video calls with teachers.",
        "LSApplicationQueriesSchemes": [
          "phonepe",
          "tez",
          "paytm",
          "gpay",
          "bhim"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "package": "com.yuvshiksha.app",
      "edgeToEdgeEnabled": true
    },

    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to let you upload profile pictures."
        }
      ]
    ],
    "extra": {
      "backendUrl": "https://api.yuvsiksha.in"
    }
  }
}
